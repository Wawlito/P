<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".Main2Activity">


        <TextView
            android:id="@+id/act2Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>


    <TextView
        android:id="@+id/act2Summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/act2Title"
        android:layout_marginTop="1dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/act2Hari"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/act2Summary"
        android:layout_marginTop="53dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/ic_kalendarz"
        android:gravity="left|center_vertical"
        android:textSize="15dp" />

    <TextView
            android:id="@+id/act2Jam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/act2Hari"
            android:layout_marginVertical="10dp"
            android:textSize="15dp"
            android:drawableLeft="@drawable/ic_time"
            android:gravity="left|center_vertical"/>




</RelativeLayout>
